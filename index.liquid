extends: default.liquid
---
<div class="section-blog">
    <table class="u-full-width">
        <thead>
            <tr>
                <th>Posts</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
            <tr>
                <td>{{ post.date | date: "%a, %b %d, %y" }}</td>
                <td>
                    <a href="{{post.path}}">{{ post.title }}</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
