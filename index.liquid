layout: default.liquid
permalink: /
---
<div class="section-blog">
    <table class="u-full-width">
        <thead>
            <tr>
                <th>Posts</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for post in collections.posts.pages %}
            <tr>
                <td>{{ post.published_date | date: "%a, %b %d, %y" }}</td>
                <td>
                    <a href="{{ post.permalink }}">{{ post.title }}</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
